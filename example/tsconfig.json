{
  "compilerOptions": {
    "allowSyntheticDefaultImports": true,
    "declaration": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "jsx": "react",
    "module": "CommonJS",
    "moduleResolution": "node",
    "noFallthroughCasesInSwitch": true,
    "noUnusedParameters": false,
    "skipLibCheck": true,
    "sourceMap": true,
    "target": "esnext",
    "lib": ["dom", "es2019"],
    "rootDir": "code",
    "outDir": "dist",
    "strict": true
  },
  "include": ["code"]
}
